  -H "Content-Type: application/json" \
  -d '{
    "index_patterns": ["industrial-events-*"],
    "order": 10,
    "settings": {
      "number_of_shards": 1,
      "number_of_replicas": 1
    },
    "mappings": {
      "dynamic": "true",
      "properties": {
        "@timestamp": { "type": "date" },

        "message": { "type": "text" },

        "service": { "type": "keyword" },
        "line":    { "type": "keyword" },
        "scenario":{ "type": "keyword" },
        "shift":   { "type": "keyword" },

        "level":   { "type": "keyword" },
        "host":    { "type": "keyword" },

        "event_type": { "type": "keyword" },
        "status":     { "type": "keyword" },

        "duration_ms": { "type": "float" },
        "error_code":  { "type": "keyword" },

        "tags": { "type": "keyword" }
      }
    }
  }'
